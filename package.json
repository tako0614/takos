{
  "name": "takos",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "api",
    "backend",
    "platform"
  ],
  "scripts": {
    "dev": "npm --workspace backend run dev",
    "deploy": "npm --workspace backend run deploy",
    "lint": "npm --workspaces run lint || true",
    "test": "npm --workspace api run test && npm --workspace platform run test",
    "dev:watch-app": "tsx scripts/watch-app-workspace.ts",
    "validate:app": "tsx scripts/validate-app-manifest.ts",
    "init:config": "node scripts/init-config.js",
    "validate:profile": "node scripts/validate-takos-profile.js",
    "config:compat": "tsx scripts/api/config-tools.ts compat",
    "config:export": "tsx scripts/api/config-tools.ts export",
    "config:diff": "tsx scripts/api/config-tools.ts diff",
    "config:import": "tsx scripts/api/config-tools.ts import",
    "ui:contract": "node frontend/scripts/validate-ui-contract.mjs",
    "ui:contract:generate": "node frontend/scripts/generate-ui-contract.mjs"
  },
  "dependencies": {
    "ky": "^1.14.0"
  },
  "devDependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chokidar": "^3.6.0",
    "semver": "^7.7.3",
    "tsx": "^4.19.2"
  }
}
