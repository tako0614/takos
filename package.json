{
  "name": "takos",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "app/*",
    "api",
    "backend",
    "platform"
  ],
  "scripts": {
    "dev": "npm --workspace backend run dev",
    "deploy": "npm --workspace backend run deploy",
    "lint": "npm --workspaces run lint || true",
    "test": "npm --workspace @takos/app-sdk run test && npm --workspace api run test && npm --workspace platform run test",
    "dev:watch-app": "node --import tsx scripts/watch-app-workspace.ts",
    "validate:app": "node --import tsx scripts/validate-app-manifest.ts",
    "validate:bundler-manifest": "npm --workspace @takos/app-bundler run validate --",
    "validate:all": "npm run validate:app && npm run validate:profile && npm run ui:contract",
    "init:config": "node scripts/init-config.js",
    "validate:profile": "node scripts/validate-takos-profile.js",
    "audit:core-app-boundary": "node --import tsx scripts/audit-core-app-boundary.ts",
    "config:compat": "node --import tsx scripts/api/config-tools.ts compat",
    "config:export": "node --import tsx scripts/api/config-tools.ts export",
    "config:diff": "node --import tsx scripts/api/config-tools.ts diff",
    "config:import": "node --import tsx scripts/api/config-tools.ts import",
    "ui:contract": "node --import tsx scripts/ui-contract.ts",
    "ui:contract:legacy": "node frontend/scripts/validate-ui-contract.mjs",
    "ui:contract:generate": "node frontend/scripts/generate-ui-contract.mjs"
  },
  "dependencies": {
    "ky": "^1.14.0"
  },
  "devDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.53.3",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "chokidar": "^3.6.0",
    "semver": "^7.7.3",
    "tsx": "^4.19.2"
  }
}
