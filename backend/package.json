{
  "name": "@takos/backend",
  "version": "0.0.0",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    }
  },
  "private": true,
  "scripts": {
    "deploy": "wrangler deploy",
    "deploy:prod": "wrangler deploy",
    "dev": "wrangler dev --ip=0.0.0.0 --port=8787",
    "start": "wrangler dev --ip=0.0.0.0 --port=8787",
    "test": "vitest",
    "prisma:generate": "prisma generate",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:migrate-diff": "prisma migrate diff --from-empty --to-schema-datamodel prisma/schema.prisma --script"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.19",
    "vitest": "~3.2.0",
    "wrangler": "^4.35.0",
    "prisma": "^6.16.1",
    "typescript": "^5.6.2",
    "@cloudflare/workers-types": "^4.20240925.0"
  },
  "dependencies": {
    "hono": "^4.9.6",
    "@prisma/client": "^6.16.1",
    "@prisma/adapter-d1": "^6.16.1",
    "@takos/platform": "*"
  }
}
