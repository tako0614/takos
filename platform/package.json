{
  "name": "@takos/platform",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./server": {
      "import": "./src/server/index.ts",
      "types": "./src/server/index.ts"
    },
    "./server/*": {
      "import": "./src/server/*.ts",
      "types": "./src/server/*.ts"
    },
    "./auth/*": {
      "import": "./src/auth/*.ts",
      "types": "./src/auth/*.ts"
    },
    "./activitypub/*": {
      "import": "./src/activitypub/*.ts",
      "types": "./src/activitypub/*.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240925.0",
    "@prisma/client": "^7.0.0",
    "typescript": "^5.6.2",
    "vitest": "~3.2.0"
  },
  "dependencies": {
    "hono": "^4.9.6"
  }
}

