{
  "schema_version": "1.0",
  "distro": {
    "name": "takos-oss",
    "version": "0.1.0"
  },
  "node": {
    "url": "https://node.example.com",
    "instance_name": "Example Node",
    "default_language": "ja-JP",
    "registration": {
      "mode": "invite-only"
    }
  },
  "api": {
    "disabled_api_endpoints": []
  },
  "ui": {
    "theme": "standard",
    "accent_color": "#0080ff",
    "logo_url": "/static/logo.svg",
    "allow_custom_css": false
  },
  "activitypub": {
    "federation_enabled": true,
    "blocked_instances": ["spam.example"],
    "outbox_signing": {
      "require_http_signatures": true
    }
  },
  "ai": {
    "enabled": true,
    "requires_external_network": true,
    "default_provider": "openai-main",
    "enabled_actions": ["ai.chat", "ai.summary", "ai.translation", "ai.tag-suggest"],
    "providers": {
      "openai-main": {
        "type": "openai",
        "base_url": "https://api.openai.com/v1",
        "model": "gpt-4o-mini",
        "api_key_env": "OPENAI_API_KEY"
      }
    },
    "data_policy": {
      "send_public_posts": true,
      "send_community_posts": true,
      "send_dm": false,
      "send_profile": false,
      "notes": "DM forwarding remains disabled; enable cautiously after policy review."
    }
  },
  "gates": {
    "core_version": "1.8.0",
    "schema_version": "1.0",
    "manifest_schema": "1.0",
    "ui_contract": "1.0"
  },
  "custom": {}
}
