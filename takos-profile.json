{
  "schema_version": "1.10",
  "name": "takos-oss",
  "display_name": "Takos OSS",
  "description": "Single-instance takos distribution for Cloudflare Workers.",
  "version": "0.1.0",
  "kind": "distro",
  "tags": ["oss", "reference"],
  "base": {
    "core_version": ">=1.3.0 <2.0.0",
    "repo": "https://github.com/your-org/takos"
  },
  "runtime": {
    "supported": ["cloudflare-workers"],
    "default": "cloudflare-workers"
  },
  "activitypub": {
    "contexts": ["https://docs.takos.jp/ns/activitypub/v1.jsonld"],
    "profile": "https://docs.takos.jp/",
    "node_type": "takos-node",
    "extensions": [
      {
        "id": "takos-core-ap",
        "description": "Core takos ActivityPub handlers for posts, questions, and announces.",
        "spec_url": "https://docs.takos.jp/activitypub"
      }
    ]
  },
  "disabled_api_endpoints": ["/-/internal/*"],
  "ui": {
    "client_repo": "https://github.com/your-org/takos",
    "theme": "standard"
  },
  "ai": {
    "enabled": true,
    "requires_external_network": true,
    "providers": ["openai"],
    "actions": ["ai.chat", "ai.summary", "ai.translation", "ai.tag-suggest", "ai.dm-moderator"],
    "data_policy": {
      "send_public_posts": true,
      "send_community_posts": true,
      "send_dm": false,
      "send_profile": true,
      "notes": "DM forwarding disabled by default for OSS distro."
    }
  },
  "gates": {
    "core_version": "1.10.0",
    "schema_version": "1.10",
    "manifest_schema": "1.10",
    "ui_contract": "1.10"
  },
  "metadata": {
    "maintainer": {
      "name": "Takos Project"
    },
    "license": "AGPL-3.0-or-later",
    "repo": "https://github.com/your-org/takos",
    "docs": "https://docs.takos.jp/"
  }
}
