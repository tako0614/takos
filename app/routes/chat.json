{
  "routes": [
    {
      "id": "dm_threads",
      "method": "GET",
      "path": "/dm/threads",
      "handler": "listDmThreads",
      "auth": true,
      "description": "List DM threads."
    },
    {
      "id": "dm_thread_messages",
      "method": "GET",
      "path": "/dm/threads/:threadId/messages",
      "handler": "getDmThreadMessages",
      "auth": true,
      "description": "Fetch messages for a DM thread."
    },
    {
      "id": "dm_thread_with_handle",
      "method": "GET",
      "path": "/dm/with/:handle",
      "handler": "getOrCreateDmThread",
      "auth": true,
      "description": "Get or create a DM thread with a specific user."
    },
    {
      "id": "dm_send",
      "method": "POST",
      "path": "/dm/send",
      "handler": "sendDm",
      "auth": true,
      "description": "Send a direct message."
    },
    {
      "id": "channel_messages_list",
      "method": "GET",
      "path": "/communities/:id/channels/:channelId/messages",
      "handler": "listChannelMessages",
      "auth": true,
      "description": "List messages within a community channel."
    },
    {
      "id": "channel_messages_send",
      "method": "POST",
      "path": "/communities/:id/channels/:channelId/messages",
      "handler": "sendChannelMessage",
      "auth": true,
      "description": "Send a message to a community channel."
    }
  ]
}
