{
  "schema_version": "1.10",
  "routes": [
    {
      "id": "user_get_me",
      "method": "GET",
      "path": "/me",
      "handler": "getCurrentUser",
      "auth": true,
      "description": "Return the authenticated user's profile."
    },
    {
      "id": "user_update_profile",
      "method": "PATCH",
      "path": "/me",
      "handler": "updateProfile",
      "auth": true,
      "description": "Update display name, avatar, or privacy settings."
    },
    {
      "id": "user_search",
      "method": "GET",
      "path": "/users",
      "handler": "searchUsers",
      "auth": true,
      "description": "Search local or remote users."
    },
    {
      "id": "user_get_by_id",
      "method": "GET",
      "path": "/users/:id",
      "handler": "getUser",
      "auth": false,
      "description": "Fetch a user by ID or handle."
    },
    {
      "id": "user_list_friends",
      "method": "GET",
      "path": "/me/friends",
      "handler": "listFriends",
      "auth": true,
      "description": "List mutual follows."
    },
    {
      "id": "user_list_following",
      "method": "GET",
      "path": "/me/following",
      "handler": "listFollowing",
      "auth": true,
      "description": "List users the current user is following."
    },
    {
      "id": "user_list_followers",
      "method": "GET",
      "path": "/me/followers",
      "handler": "listFollowers",
      "auth": true,
      "description": "List followers for the current user."
    },
    {
      "id": "user_list_follow_requests",
      "method": "GET",
      "path": "/me/follow-requests",
      "handler": "listFollowRequests",
      "auth": true,
      "description": "List incoming and outgoing follow requests."
    },
    {
      "id": "user_follow",
      "method": "POST",
      "path": "/users/:id/follow",
      "handler": "followUser",
      "auth": true,
      "description": "Send a follow request or follow a user."
    },
    {
      "id": "user_unfollow",
      "method": "DELETE",
      "path": "/users/:id/follow",
      "handler": "unfollowUser",
      "auth": true,
      "description": "Unfollow a user."
    },
    {
      "id": "user_accept_follow",
      "method": "POST",
      "path": "/users/:id/follow/accept",
      "handler": "acceptFollowRequest",
      "auth": true,
      "description": "Accept a pending follow request."
    },
    {
      "id": "user_reject_follow",
      "method": "POST",
      "path": "/users/:id/follow/reject",
      "handler": "rejectFollowRequest",
      "auth": true,
      "description": "Reject a pending follow request."
    },
    {
      "id": "user_block",
      "method": "POST",
      "path": "/users/:id/block",
      "handler": "blockUser",
      "auth": true,
      "description": "Block a user (local or remote)."
    },
    {
      "id": "user_unblock",
      "method": "DELETE",
      "path": "/users/:id/block",
      "handler": "unblockUser",
      "auth": true,
      "description": "Remove a block."
    },
    {
      "id": "user_mute",
      "method": "POST",
      "path": "/users/:id/mute",
      "handler": "muteUser",
      "auth": true,
      "description": "Mute a user locally."
    },
    {
      "id": "user_unmute",
      "method": "DELETE",
      "path": "/users/:id/mute",
      "handler": "unmuteUser",
      "auth": true,
      "description": "Remove a mute."
    },
    {
      "id": "user_list_blocks",
      "method": "GET",
      "path": "/me/blocks",
      "handler": "listBlocks",
      "auth": true,
      "description": "List blocked users."
    },
    {
      "id": "user_list_mutes",
      "method": "GET",
      "path": "/me/mutes",
      "handler": "listMutes",
      "auth": true,
      "description": "List muted users."
    },
    {
      "id": "user_notifications",
      "method": "GET",
      "path": "/notifications",
      "handler": "listNotifications",
      "auth": true,
      "description": "List notifications for the active user."
    },
    {
      "id": "user_notification_read",
      "method": "POST",
      "path": "/notifications/:id/read",
      "handler": "markNotificationRead",
      "auth": true,
      "description": "Mark a notification as read."
    },
    {
      "id": "user_list_pinned_posts",
      "method": "GET",
      "path": "/users/:id/pinned",
      "handler": "listPinnedPosts",
      "auth": false,
      "description": "Retrieve pinned posts for a user."
    }
  ]
}
