{
  "routes": [
    {
      "id": "actors",
      "method": "POST",
      "path": "/auth/actors",
      "handler": "actors",
      "auth": true,
      "description": "Creation and switching of local actors (requires authentication)."
    },
    {
      "id": "auth_login",
      "method": "POST",
      "path": "/auth/login",
      "handler": "authLogin",
      "auth": false,
      "description": "Login that issues a session."
    },
    {
      "id": "auth_issue_session_token",
      "method": "POST",
      "path": "/auth/session/token",
      "handler": "issueSessionToken",
      "auth": false,
      "description": "Exchange credentials for a session token."
    },
    {
      "id": "auth_logout",
      "method": "POST",
      "path": "/auth/logout",
      "handler": "logout",
      "auth": true,
      "description": "Invalidate the current session."
    }
  ]
}
