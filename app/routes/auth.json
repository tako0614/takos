{
  "routes": [
    {
      "id": "owner_actors",
      "method": "POST",
      "path": "/auth/owner/actors",
      "handler": "ownerActors",
      "auth": true,
      "description": "Owner-only creation and switching of local actors."
    },
    {
      "id": "auth_login",
      "method": "POST",
      "path": "/auth/login",
      "handler": "authLogin",
      "auth": false,
      "description": "Owner login that issues an owner session."
    },
    {
      "id": "auth_issue_session_token",
      "method": "POST",
      "path": "/auth/session/token",
      "handler": "issueSessionToken",
      "auth": false,
      "description": "Exchange credentials for a session token."
    },
    {
      "id": "auth_logout",
      "method": "POST",
      "path": "/auth/logout",
      "handler": "logout",
      "auth": true,
      "description": "Invalidate the current owner session."
    }
  ]
}
