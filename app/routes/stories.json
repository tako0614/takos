{
  "schema_version": "1.10",
  "routes": [
    {
      "id": "stories_create",
      "method": "POST",
      "path": "/stories",
      "handler": "createStory",
      "auth": true,
      "description": "Create a new story."
    },
    {
      "id": "stories_list",
      "method": "GET",
      "path": "/stories",
      "handler": "listStories",
      "auth": true,
      "description": "List current stories."
    },
    {
      "id": "stories_get",
      "method": "GET",
      "path": "/stories/:id",
      "handler": "getStory",
      "auth": true,
      "description": "Fetch a single story."
    },
    {
      "id": "stories_update",
      "method": "PATCH",
      "path": "/stories/:id",
      "handler": "updateStory",
      "auth": true,
      "description": "Update a story."
    },
    {
      "id": "stories_delete",
      "method": "DELETE",
      "path": "/stories/:id",
      "handler": "deleteStory",
      "auth": true,
      "description": "Delete a story."
    },
    {
      "id": "stories_create_in_community",
      "method": "POST",
      "path": "/communities/:id/stories",
      "handler": "createCommunityStory",
      "auth": true,
      "description": "Create a community story."
    },
    {
      "id": "stories_list_in_community",
      "method": "GET",
      "path": "/communities/:id/stories",
      "handler": "listCommunityStories",
      "auth": true,
      "description": "List community stories."
    }
  ]
}
