{
  "screens": [
    {
      "id": "screen.home",
      "route": "/",
      "title": "Home",
      "layout": {
        "type": "Column",
        "props": { "id": "root", "gap": 16 },
        "children": [
          {
            "type": "StoriesBar",
            "props": { "id": "stories" }
          },
          {
            "type": "PostFeed",
            "props": {
              "id": "timeline",
              "source": "home",
              "emptyText": "まだ投稿がありません"
            }
          }
        ]
      }
    },
    {
      "id": "screen.community",
      "route": "/communities/:id",
      "title": "Community",
      "layout": {
        "type": "Column",
        "props": { "id": "community-root", "gap": 16 },
        "children": [
          {
            "type": "PageHeader",
            "props": {
              "id": "community-header",
              "title": "Community",
              "backHref": "/connections"
            }
          },
          {
            "type": "StoriesBar",
            "props": { "id": "community-stories" }
          },
          {
            "type": "PostFeed",
            "props": {
              "id": "community-feed",
              "source": "community",
              "emptyText": "このコミュニティにはまだ投稿がありません"
            }
          }
        ]
      }
    },
    {
      "id": "screen.dm_list",
      "route": "/dm",
      "title": "Direct Messages",
      "layout": {
        "type": "Column",
        "props": { "id": "dm-root", "gap": 16 },
        "children": [
          {
            "type": "PageHeader",
            "props": {
              "id": "dm-header",
              "title": "メッセージ"
            }
          },
          {
            "type": "ThreadList",
            "props": {
              "id": "dm-threads",
              "emptyText": "メッセージはまだありません"
            }
          }
        ]
      }
    },
    {
      "id": "screen.communities",
      "route": "/communities",
      "title": "Communities",
      "layout": {
        "type": "Column",
        "props": { "id": "communities-root", "gap": 16 },
        "children": [
          {
            "type": "PageHeader",
            "props": {
              "id": "communities-header",
              "title": "コミュニティ"
            }
          },
          {
            "type": "CommunityList",
            "props": {
              "id": "community-list",
              "showJoined": true,
              "emptyText": "まだコミュニティに参加していません"
            }
          }
        ]
      }
    },
    {
      "id": "screen.profile",
      "route": "/profile/:id",
      "title": "Profile",
      "layout": {
        "type": "Column",
        "props": { "id": "profile-root", "gap": 16 },
        "children": [
          {
            "type": "PageHeader",
            "props": {
              "id": "profile-header",
              "title": "プロフィール",
              "backHref": "/"
            }
          },
          {
            "type": "Placeholder",
            "props": { "text": "Profile content (use native component for now)" }
          }
        ]
      }
    },
    {
      "id": "screen.settings",
      "route": "/settings",
      "title": "Settings",
      "layout": {
        "type": "Column",
        "props": { "id": "settings-root", "gap": 16 },
        "children": [
          {
            "type": "PageHeader",
            "props": {
              "id": "settings-header",
              "title": "設定",
              "backHref": "/"
            }
          },
          {
            "type": "Placeholder",
            "props": { "text": "Settings content (use native component for now)" }
          }
        ]
      }
    }
  ]
}
