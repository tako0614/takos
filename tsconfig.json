{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types", "@types/node"],
    "baseUrl": ".",
    "paths": {
      "@takos/platform": ["./platform/src/index.ts"],
      "@takos/platform/*": ["./platform/src/*"],
      "@takos/platform/server": ["./platform/src/server/index.ts"],
      "@takos/platform/server/*": ["./platform/src/server/*"],
      "@takos/platform/app": ["./platform/src/app/index.ts"],
      "@takos/platform/app/*": ["./platform/src/app/*"],
      "@takos/platform/app/services": ["./platform/src/app/services/index.ts"],
      "@takos/core": ["./core/src/index.ts"],
      "@takos/core/*": ["./core/src/*"]
    }
  },
  "include": ["app-main.ts", "takos-profile.json", "takos-ui-contract.json", "takos-app.json", "app/**/*.json"],
  "exclude": ["node_modules", "dist", "frontend", "api", "backend", "platform"]
}
